<div class="row d-flex justify-content-start clearfix" >
    <% for(let i=start; i < end; i++) { %>
        <div class="col-3 card p-0 card-libro m-2" id="prueba-<%= libros[i].isbn %>" name="tarjeta-libro" data-categoria="<%= libros[i].categoria %>" data-editorial="<%= libros[i].editorial %>" data-autor="<%= libros[i].autor %>">
            <div class="contenedor-imagen" data-mdb-ripple-color="light">
                <a href="/libros/<%= libros[i].isbn %>">
                    <img class="img-portada-libro rounded-2" src="<%= libros[i].imagen %>"
                        alt="<%= libros[i].titulo %>" />
                </a>
                <a href="/agregar-carrito/<%= libros[i].isbn %>" class="btn btn-agregar-cart">Agregar al carrito</a>
            </div>
            <div class="card-body pt-2">
                <div class="d-flex justify-content-between">
                    <p class="mb-2 texto-small">
                        <%= libros[i].autor %>
                    </p>
                    <div>
                        <i class="bi bi-bookmark"></i>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <p class="texto-medium mb-0">
                        <%= libros[i].titulo %>
                    </p>
                    <div>
                        <p class="mb-0">$ <%= libros[i].precio %>
                        </p>
                    </div>
                </div>
            </div>

        </div>
        <% } %>
</div>